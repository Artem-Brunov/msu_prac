
var text;
var synth;
var ttsObject;


function add()
{	
	var playFile, pf;
	playFile = new ActiveXObjec("Scripting.FileSystemObject");
	pf = playFile.CreateTextFile("~/workspace/BasicUI/js/playFile.txt", true);
	pf.WriteLine(document.getElementById("TTS").value);
	pf.Close();
}

function talk() 
{

	synth = window.speechSynthesis;
