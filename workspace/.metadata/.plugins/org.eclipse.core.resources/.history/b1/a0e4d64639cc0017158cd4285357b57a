
var text;
var synth;
var ttsObject;

function add()
{	
	var voices = []
	voices.push(document.getElementById("TTS").value);
	return voices;

}
function talk() 
{

	synth = window.speechSynthesis;
	ttsObject = new SpeechSynthesisUtterance(voices);
	
	synth.speak(ttsObject);
}

function stop()
{
	var pp = add();
	alert(pp);
	synth.pause();
}