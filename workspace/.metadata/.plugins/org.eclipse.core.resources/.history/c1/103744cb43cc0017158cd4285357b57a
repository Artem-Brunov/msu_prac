
var text;
var synth;
var ttsObject;


function add()
{	
	var FileName = "js/playFile.txt";
	var playFile, pf;
	playFile = new ActiveXObject("Scripting.FileSystemObject");
	pf = playFile.CreateTextFile(FileName, true);
	pf.WriteLine(document.getElementById("TTS").value);
}

function talk() 
{

	synth = window.speechSynthesis;
	ttsObject = new SpeechSynthesisUtterance(voices);
	
	synth.speak(ttsObject);
}

function stop()
{
	var pp = add();
	alert(pp);
	synth.pause();
}