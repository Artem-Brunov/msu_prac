<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="Tizen Mobile Web Basic Template" />

    <title>Tizen Mobile Web Basic Application</title>

    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <script >
    	
		var voices = [];
		var text = document.TTS.text.value;
		var synth = window.speechSynthesis;
		var ttsObject = new SpeechSynthesisUtterance(text);
		voices = synth.getVoices();
		alert(voices.length);
		
		function talk()
		{
			synth.speak(ttsObject);
		}
		
		function stop()
		{
			synth.pause();
		}
    </script>
</head>

<body>
    <form name = "TTS">
    	<input name = "text" tabindex = 1 onblur="this.value = this.value.toCase()">
    	<button onclick = "talk()" tabindex = 2>Send</button>
    	<button onclick = "stop()" tabindex = 3>Stop</button>
    </form>
    	
</body>

</html>
