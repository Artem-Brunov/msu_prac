
var text;
var synth;
var ttsObject;


function add()
{	
    var documentsDir;
    function onResolveSuccess(dir) 
    {
    	documentsDir = dir;
    }
     
    function onResolveError(e) 
    {
    	console.log('message: ' + e.message);
    }
     
    tizen.filesystem.resolve('js', onResolveSuccess, onResolveError, 'rw');
	documentsDir.createFile('sample-text-file.txt');
}

