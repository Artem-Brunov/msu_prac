<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    

    <title>Tizen Mobile Web Basic Application</title>

    <link rel="stylesheet" type="text/css" href="css/style.css" />
    
    <script>
    	

    var documentsDir;
    var dir = "~/msu_prac/workspace/BasicUI/js";
    function onResolveSuccess(dir) {
    documentsDir = dir;
    }
     
    function onResolveError(e) {
    console.log('message: ' + e.message);
    }
     
    tizen.filesystem.resolve('documents', onResolveSuccess, onResolveError, 'rw');
    

    documentsDir.createFile('sample-text-file.txt');
    
    
    
    </script>
    
</head>

<body>
    <form>
    	<input type = "text" tabindex = 1 value = "" id = "TTS">
    	<button onclick = "add()" tabindex = 2>Add</button>
    	<button onclick = "talk()" tabindex = 3>Play</button>
    	<button onclick = "stop()" tabindex = 3>Stop</button>
    </form>
    	
